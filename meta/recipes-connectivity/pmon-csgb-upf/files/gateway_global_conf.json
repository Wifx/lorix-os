{
  "gateway_conf": {
    "lorawan_public": true,

    /* ChirpStack Gateway Bridge configuration */
    "server_address": "127.0.0.1",
    "serv_port_up": 1700,
    "serv_port_down": 1700,

    /* Timing parameters depending on your network */
    "keepalive_interval": 10, /* keep-alive interval (in seconds) for downstream (default=10) */
    "stat_interval": 30,      /* in seconds, default=30 */
    "push_timeout_ms": 100,   /* default=100 */

    /* Invalid packets forwarding rules */
    "forward_crc_valid": true,
    "forward_crc_error": false,
    "forward_crc_disabled": false
  }
}
