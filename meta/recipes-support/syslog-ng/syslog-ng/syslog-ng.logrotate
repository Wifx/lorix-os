/var/log-volatile/*
/var/log-persistent/*
{
	missingok
	notifempty
	nodateext
	maxsize 100k
	rotate 5
	sharedscripts
	postrotate
		/sbin/rc-service syslog-ng reload >/dev/null
	endscript
}

/var/log-persistent/*/*
/var/log-volatile/*/*
{
	missingok
	notifempty
	nodateext
	maxsize 100k
	rotate 3
	sharedscripts
	postrotate
		/sbin/rc-service syslog-ng reload >/dev/null
	endscript
}
