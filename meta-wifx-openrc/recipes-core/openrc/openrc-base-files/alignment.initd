start() {
    ebegin "Setting CPU misalignment error handling strategy"
    if [ -e /proc/cpu/alignment ]; then
        echo "3" > /proc/cpu/alignment
        eend $?
    else
        eend 1 "/proc/cpu/alignment not found"
    fi
}
