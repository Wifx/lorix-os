+		| AT91C_SMC_SETUP_NCS_WR(1)
+		| AT91C_SMC_SETUP_NRD(1)
+		| AT91C_SMC_SETUP_NCS_RD(1),
+		(ATMEL_BASE_SMC + SMC_SETUP3));
+
+	writel(AT91C_SMC_PULSE_NWE(2)
+		| AT91C_SMC_PULSE_NCS_WR(3)
+		| AT91C_SMC_PULSE_NRD(2)
+		| AT91C_SMC_PULSE_NCS_RD(3),
