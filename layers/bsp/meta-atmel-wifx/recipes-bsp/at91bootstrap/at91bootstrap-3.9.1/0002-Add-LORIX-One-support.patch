+
+	/* EBI Configuration Register */
+	writel((AT91C_EBICFG_DRIVE0_HIGH
+		| AT91C_EBICFG_PULL0_NONE
+		| AT91C_EBICFG_DRIVE1_HIGH
+		| AT91C_EBICFG_PULL1_NONE), SFR_EBICFG + AT91C_BASE_SFR);
